<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:background="@drawable/finish_run">
      
        <ImageButton
         android:id="@+id/finish_back"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="15dp"
         android:background="@drawable/finish_back_btn"/>
    
    </RelativeLayout>
    
    
    <RelativeLayout 
      android:id="@+id/run_status"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2.5"
      android:background="#D4F3F9">
      
        <ImageView 
           android:id="@+id/icon"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/share_done_icon"/>
        
        <TextView 
           android:id="@+id/distance"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="30sp"
           android:textColor="#000000"
           android:layout_alignTop="@+id/icon"
           android:layout_toRightOf="@+id/icon"
           android:layout_marginLeft="5dp"/>
        
         <TextView 
           android:id="@+id/finish_description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:textColor="#000000"
           android:layout_alignBottom="@+id/icon"
           android:layout_toRightOf="@+id/icon"
           android:layout_marginLeft="5dp"/>
         
         <ImageView
           android:id="@+id/divider"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_below="@+id/finish_description"
           android:layout_marginTop="10dp"
           android:background="#8D9495"/>
         
         <LinearLayout 
           android:id="@+id/data"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_alignParentBottom="true"
           android:orientation="horizontal">
           
          <TextView 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="match_parent"
           android:textSize="18sp"
           android:textColor="#000000"
           android:text="@string/run"/>
          
          <TextView 
           android:id="@+id/finish_duration"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="match_parent"
           android:textSize="18sp"
           android:textColor="#000000"
           android:text="@string/run"/>
          
          <TextView 
           android:id="@+id/finish_distance"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="match_parent"
           android:textSize="18sp"
           android:textColor="#000000"
           android:text="@string/run"/>
          
          <TextView 
           android:id="@+id/finish_cal"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="match_parent"
           android:textSize="18sp"
           android:textColor="#000000"/>
             
         </LinearLayout>
        
        
        
    </RelativeLayout>
    
    <LinearLayout 
      android:id="@+id/share_bar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:background="@drawable/bg_list_high"
      android:orientation="horizontal">
         
        <RelativeLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">
          
            <ImageButton 
              android:id="@+id/share_to_weibo"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerInParent="true"
              android:background="@drawable/share_weibo"/>
            
        </RelativeLayout>
        
         <RelativeLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">
            
             <ImageButton 
              android:id="@+id/share_to_wechat"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerInParent="true"
              android:background="@drawable/share_wechat"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">
             
            <ImageButton 
              android:id="@+id/share_to_timeline"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerInParent="true"
              android:background="@drawable/share_timeline"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1">
            
            <ImageButton 
              android:id="@+id/share_to_qq"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerInParent="true"
              android:background="@drawable/share_qq"/>
            
        </RelativeLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
