<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tip"
    android:orientation="vertical">
    
    <RelativeLayout
      android:id="@+id/tip_topbar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/shadow">
        
        <ImageButton 
          android:id="@+id/tip_down"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:background="@drawable/btn_tip_back"/>
      
        <TextView 
          android:id="@+id/tip_city"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ffffff"
          android:textSize="20sp"
          android:layout_centerInParent="true"
          android:text="@string/default_city"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
      android:id="@+id/tip_pm"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4">
      
        <TextView 
          android:id="@+id/pm_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_above="@+id/pm_num_area"
          android:layout_marginBottom="10dp"
          android:textSize="26sp"
          android:textColor="#ffffff"
          android:text="@string/today_pm"/>
        
        
        <LinearLayout 
          android:id="@+id/pm_num_area"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:orientation="horizontal">
             
            <ImageView 
              android:id="@+id/num1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
            <ImageView 
              android:id="@+id/num2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
            <ImageView 
              android:id="@+id/num3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <ImageView 
           android:id="@+id/pm_level"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pm_num_area"
           android:layout_marginTop="15dp"
           android:layout_centerHorizontal="true"/>
        
        
    </RelativeLayout>
    
    <ImageView 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.3"/>
    
     <LinearLayout 
      android:id="@+id/tip_tip"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="6"
      android:background="@drawable/bg_blur"
      android:orientation="vertical">
        
        <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="40dp">
            
         <ImageView 
           android:id="@+id/tip_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/icon_tips"/>
         <TextView 
          android:id="@+id/tip_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ffffff"
          android:textSize="16sp"
          android:layout_centerVertical="true"
          android:text="@string/tip_index"
          android:layout_toRightOf="@+id/tip_icon"/>
             
        </RelativeLayout>
        
       <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
            
         <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
        
         <RelativeLayout 
           android:id="@+id/tip_cloth"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="@drawable/border">
         
              <TextView 
               android:id="@+id/cloth"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:layout_above="@+id/cloth_text"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:text="@string/cloth"/>
         
             <TextView 
               android:id="@+id/cloth_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
             
              <TextView 
               android:id="@+id/cloth_des"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_below="@+id/cloth_text"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
         
             <ImageView 
               android:id="@+id/cloth_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:background="@drawable/edit"/>
             
             
             
         </RelativeLayout>
         
         <RelativeLayout 
           android:id="@+id/tip_washcar"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="@drawable/border">
         
              <TextView 
               android:id="@+id/washcar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:layout_above="@+id/washcar_text"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:text="@string/washcar"/>
         
             <TextView 
               android:id="@+id/washcar_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
             
              <TextView 
               android:id="@+id/washcar_des"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_below="@+id/washcar_text"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
         
             <ImageView 
               android:id="@+id/washcar_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:background="@drawable/edit"/>
             
             
             
         </RelativeLayout>
         
         <RelativeLayout 
           android:id="@+id/tip_fever"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="@drawable/border">
         
              <TextView 
               android:id="@+id/fever"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:layout_above="@+id/fever_text"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:text="@string/fever"/>
         
             <TextView 
               android:id="@+id/fever_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
             
              <TextView 
               android:id="@+id/fever_des"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_below="@+id/fever_text"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
         
             <ImageView 
               android:id="@+id/fever_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:background="@drawable/edit"/>
             
         </RelativeLayout>
         
         <RelativeLayout 
           android:id="@+id/tip_sport"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="@drawable/border">
         
              <TextView 
               android:id="@+id/sport"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:layout_above="@+id/sport_text"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:text="@string/sport"/>
         
             <TextView 
               android:id="@+id/sport_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
             
              <TextView 
               android:id="@+id/sport_des"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_below="@+id/sport_text"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
         
             <ImageView 
               android:id="@+id/sport_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:background="@drawable/edit"/>
             
         </RelativeLayout>
         
         <RelativeLayout 
           android:id="@+id/tip_ultra"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="@drawable/border">
         
              <TextView 
               android:id="@+id/ultra"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#ffffff"
               android:layout_above="@+id/ultra_text"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:text="@string/ultra"/>
         
             <TextView 
               android:id="@+id/ultra_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
             
              <TextView 
               android:id="@+id/ultra_des"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#BDD9F7"
               android:layout_below="@+id/ultra_text"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
         
             <ImageView 
               android:id="@+id/ultra_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:background="@drawable/edit"/>
             
         </RelativeLayout>
         
        </LinearLayout>
         
       </ScrollView>
         
        
        
    </LinearLayout>
    
    
       
    

</LinearLayout>
